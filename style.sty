\usepackage{customtex}
\bibliography{bibliography/references.bib}

\usetikzlibrary{patterns}

\KOMAoptions{
	twoside       = semi,
	open          = any,
	DIV           = 8,
	fontsize      = 12pt,
	chapterprefix = true,
	numbers       = noenddot,
	bibliography  = totoc
}

\addtokomafont{disposition}{\addfontfeatures{Numbers = Lining}}

\counterwithin{section}{chapter}
\renewcommand{\thechapter}{\Roman{chapter}}
\renewcommand{\thesection}{\thechapter.\arabic{section}}
\renewcommand{\thesubsection}{Exercise~\thesection.\arabic{subsection}}
\renewcommand{\thesubsubsection}{(\alph{subsubsection})}
\renewcommand{\theeverything}{\thechapter.\Alph{everything}}

% make the claim environment local to each exercise
\counterwithin{claim}{subsection}
\renewcommand{\theclaim}{\arabic{claim}}

\setcounter{secnumdepth}{3}
\setcounter{tocdepth}{2}

% words
\newcommand{\axis}[1]{#1\nobreakdash-axis}
\newcommand{\nth}[1]{#1\nobreakdash-th}
\newcommand{\spacespace}[1]{#1\nobreakdash-space}
\newcommand{\spacesspaces}[1]{#1\nobreakdash-spaces}

% spaces
\DeclareMathOperator{\ball}{B}
\newcommand{\cball}{\overline{\operatorname{B}}}
\DeclareMathOperator{\mcone}{M}
\DeclareMathOperator{\mcyl}{C}
\newcommand{\sphere}{\mathrm{S}}
\newcommand{\SOrt}{\mathrm{SO}}
\newcommand{\SUni}{\mathrm{SU}}
\newcommand{\Symp}{\mathrm{Sp}}

% functions and operators
\DeclareMathOperator{\dist}{dist}
\renewcommand{\id}{1}
\AtBeginDocument{
	\renewcommand{\int}{\operatorname{int}}
}
\DeclareMathOperator{\supp}{supp}

% fonts
\newcommand{\basis}{\mathbf}
\newcommand{\cover}{\mathbf}

% decorations
\AtBeginDocument{
	\renewcommand{\closure}{\overline}
}

% differentials
\newcommand{\dd}[1]{\mathop{}\mathrm{d}#1}

% separation axioms
\newcommand{\Tax}[1]{T\textsubscript{\raisebox{0.15em}{#1}}}

% vectors
\renewcommand{\vect}[1]{\begin{bmatrix} #1 \end{bmatrix}}
